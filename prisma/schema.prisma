generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model Person {
  id            Int       @id @default(autoincrement())
  firstName     String?
  lastName      String?
  maritalStatus String?
  gender        String?
  nationality   String?
  bornOn        DateTime?
  emailAddress  String?
  bornIn        String?
  cell          String?
  child         String?
  religion         String?

  pec           String?
  city          String?
  region        String?
  state         String?
  country       String?
  zip           String?
  streetAddress String?
  about         String?
  image         String?

  document        String?
  documentNumber  String?
  residencyPermit String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Service   Service[]
  Family    Family[]
}

model Family {
  id        Int     @id @default(autoincrement())
  firstName String?
  lastName  String?
  gender    String?
  relation    String?
  age       String?
  person    Person? @relation(fields: [personId], references: [id])
  personId  Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Service {
  id       Int     @id @default(autoincrement())
  person   Person? @relation(fields: [personId], references: [id])
  personId Int?

  service String?
  date    String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}
